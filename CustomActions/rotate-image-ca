Icon="--window-icon=image-x-generic"

Rotation=$(yad $Icon --height=150 --list --no-headers --column="Select One" --title="Rotate Image(s)" --text="Select the desired number of degrees\nto rotate." 90 180 270)

ret="$?"

Rotation=$(echo "$Rotation" | awk -F '|' '{print $1}')

if [ "$ret" = "1" ]; then
 exit 0
elif [ "$ret" = "252" ]; then
 exit 0
elif [ "$Rotation" = "" ]; then
 yad $Icon --title=ERROR --text="          No rotation amount selected          \n" --button=$"gtk-quit:1"
 exit 0
fi

progressbar () {
tail -f /usr/bin/rotate-image-ca |  yad $Icon --no-buttons --progress --pulsate --auto-close --title="Rotate Image(s)" --text="$@"
}

progressbar "     Rotating image(s) $Rotation degrees now     \n" &

for i in "$@"; do
 convert "$i" -rotate $Rotation "$i"
done

sleep 5

killall -KILL tail

yad $Icon --info --title="Rotate Image(s)" --text="          Rotation completed.          \n" --button=$"gtk-ok:1"

exit
