Input=$(yad --width=250 --entry --title="Search The Web" --window-icon=edit-find --button=$"gtk-quit:3" --button=$"gtk-ok:2")

ret="$?"

if [ "$ret" = "252" ]; then
 exit 0
elif [ "$ret" = "3" ]; then
 exit 0
fi

SearchTerms=$(echo "$Input" | sed 's| |+|g')



exec midori "https://duckduckgo.com/?q=$SearchTerms\&t=saline" &
exit 0
